root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.go]
indent_style = tab

[*.{workflow,yaml,yml}]
indent_size = 2

[{Makefile,makefile}]
indent_style = tab

[*.{md,diff}]
trim_trailing_whitespace = false
